<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/rounded_receipt_background"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingTop="15dp"
        android:paddingRight="20dp"
        android:paddingBottom="20dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <TextView
                android:id="@+id/textView_date_receiptAdapter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:fontFamily="cursive"
                android:text="27/5/2019"
                android:textColor="@android:color/black"
                android:textSize="24sp" />

            <com.mikhaellopez.circularimageview.CircularImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/profie"
                app:civ_border_color="#313131"
                app:civ_border_width="0dp"
                app:civ_shadow="true"
                app:civ_shadow_color="#3F51B5"
                app:civ_shadow_radius="1"
                android:id="@+id/imageView_company_receiptAdapter"
                android:layout_gravity="start"/>

        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView_emailKey_receiptAdapter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="sans-serif-condensed-medium"
                android:text="Email"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView_emailVal_receiptAdapter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="sans-serif-condensed-medium"
                android:gravity="right"
                android:text="aa@gmail.com"
                android:textColor="@color/blue_grey_700"
                android:textSize="18sp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/separator_receiptAdapter"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="12dp"
            app:srcCompat="@color/blue_grey_900" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView_companyKey_receiptAdapter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="sans-serif-condensed-medium"
                android:text="Company"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView_companyVal_receiptAdapter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="sans-serif-condensed-medium"
                android:gravity="right"
                android:text="Example"
                android:textColor="@color/blue_grey_700"
                android:textSize="18sp" />
        </LinearLayout>


        <ImageView
            android:id="@+id/separator2_receiptAdapter"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="12dp"
            app:srcCompat="@color/blue_grey_900" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView_receiptIdKey_receiptAdapter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="sans-serif-condensed-medium"
                android:text="Receipt ID"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView_receiptIdVal_receiptAdapter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="sans-serif-condensed-medium"
                android:gravity="right"
                android:text="1A2B3C"
                android:textColor="@color/blue_grey_700"
                android:textSize="18sp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/separator3_receiptAdapter"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="12dp"
            app:srcCompat="@color/blue_grey_900" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView_fileNameKey_receiptAdapter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="sans-serif-condensed-medium"
                android:text="File Name"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imageView_previewFile_receiptAdapter"
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:layout_marginRight="5dp"
                app:srcCompat="@drawable/ic_preview_black_24dp" />


            <TextView
                android:id="@+id/textView_fileNameVal_receiptAdapter"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_weight="0"
                android:fontFamily="sans-serif-condensed-medium"
                android:gravity="right"
                android:scrollbars="horizontal"
                android:scrollHorizontally="true"
                android:text="123.ppf"
                android:textColor="@color/blue_grey_700"
                android:textSize="18sp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/separator4_receiptAdapter"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="12dp"
            app:srcCompat="@color/blue_grey_900" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView_totalPriceKey_receiptAdapter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="sans-serif-condensed-medium"
                android:text="Total Price"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView_totalPriceVal_receiptAdapter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="sans-serif-condensed-medium"
                android:gravity="right"
                android:text="5.00 NIS"
                android:textColor="@color/blue_grey_700"
                android:textSize="18sp" />
        </LinearLayout>


        <ImageView
            android:id="@+id/separator5_receiptAdapter"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="12dp"
            app:srcCompat="@color/blue_grey_900" />


        <LinearLayout
            android:id="@+id/linear_downloadFile_receiptAdapter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="7dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView_downloadFile_receiptAdapter"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center_horizontal"
                app:srcCompat="@drawable/ic_file_download_black_24dp" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-thin"
                android:shadowColor="@android:color/black"
                android:text="Download file"
                android:textSize="12sp"
                android:textStyle="bold" />
        </LinearLayout>


    </LinearLayout>

</RelativeLayout>