<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/partner_gradient_background">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:gravity="center_horizontal"

        android:orientation="vertical"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingBottom="15dp">

        <TextView
            android:id="@+id/tv_message_scanningPermission"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:text="I want my mail to be scanned from the last:"
            android:textColor="@android:color/white"
            android:textSize="24sp" />

        <Button
            android:id="@+id/bt_month_scanningPermission"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/scanning_permission_rounded_button"
            android:tag="month"
            android:text="Month"
            android:textColor="#000000"></Button>

        <Button
            android:id="@+id/bt_week_scanningPermission"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/scanning_permission_rounded_button"
            android:tag="week"
            android:text="Week"
            android:textColor="#000000"></Button>

        <Button
            android:id="@+id/bt_now_scanningPermission"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/scanning_permission_rounded_button"
            android:tag="now"
            android:text="From now"
            android:textColor="#000000"></Button>

    </LinearLayout>

</RelativeLayout>