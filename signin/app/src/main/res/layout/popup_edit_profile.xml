<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="250dp"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom|center"
    android:orientation="vertical"
    android:padding="5dp"
    android:background="@drawable/blue_gradient_bg"
    tools:context="ior.activities.ShowProfileActivity">


        <Button
            android:drawableLeft="@drawable/ic_camera_black_24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:background="@drawable/buttonscamera"
            android:onClick="takePicture"
            android:text="Camera"
            android:gravity="left|center"
            android:drawablePadding="5dp"
            android:ems="10"
            android:textSize="18dp"

            android:textColor="@color/graylight_account" />

        <Button
            android:drawableLeft="@drawable/ic_photo_library_black_24dp"
            android:id="@+id/uploadImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@drawable/buttonscamera"
            android:onClick="uploadPic"
            android:gravity="left|center"
            android:drawablePadding="5dp"
            android:text="Upload Image"
            android:ems="10"
            android:textSize="18dp"
            android:layout_marginBottom="15dp"
            android:textColor="@color/graylight_account" />

</LinearLayout>